<% layout('./layouts/boilerplate') %>
    <h1>Upload New Image</h1>
    <form action="/images" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="image[title]">
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" id="author" name="image[author]">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" name="image[price]">
        </div>
        <button class="btn btn-primary mt-2">Upload Image</button>
    </form>
