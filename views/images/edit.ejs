<% layout('./layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Image</h1>
    <div class="col-6 offset-3">
        <form action="/images/<%= image._id %>?_method=PUT" method="POST">
            <div class="form-group mb-3">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="image[title]" value=<%=image.title %>>
            </div>
            <div class="form-group mb-3">
                <label for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-prepend input-group-text">$</span>
                    <input type="number" min= "0" class="form-control" id="price" name="image[price]" value=<%=image.price %>>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="quantity">Quantity Available</label>
                <input type="number" class="form-control" id="quantity" name="image[quantity]" value=<%=image.quantity %>>
            </div>
            <div class="btn-toolbar">
                <button type="submit" class="btn btn-primary me-1">Update Image</button>
                <a href="/images/myimages" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>